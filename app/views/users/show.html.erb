<div id="micropost_container">
<% if logged_in? %>
	<%= form_for [@user, @micropost], :remote => true do |f| %>
		<h1 id="thinking">What are you thinking?</h1><br/>
		<%= f.text_area :content, :class => 'micropostfield' %><br/>
		<%= f.submit :class => 'btn large create_post'%>
		<em>Maximum length is 250 words</em>
	<% end %>
<% else %>
	<h2 id="thinkingwhat"><%= @user.email %>'s Status</h2>
<% end %>

<div id="microposts">
	<%= render @user.microposts.reverse %>
</div>

</div>

<div id="user_info">
	<h2><%= @user.email %></h2>
	<hr />
	<h3 id="micropost_count">		
		<%= @user.microposts.count %> Microposts
	</h3><hr/>
	<h3>
		Joined <%= time_ago_in_words(@user.created_at) %> ago
	</h3>
</div>
