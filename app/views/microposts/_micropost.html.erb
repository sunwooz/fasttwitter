<%= div_for micropost do %>
	<h3><%= micropost.user.email %></h3>
	<span id="timeago">Posted <%= time_ago_in_words(micropost.created_at) %> ago</span>
	<p id="microcontent">
		<%= micropost.content %>
	</p>
	<% if current_user == @user %>
	<p>
		<%= link_to 'Delete', user_micropost_path(micropost), :method => :delete, :remote => true, :class => 'delete_micropost btn large' %>
	</p>
	<% end %>
	<hr/>
<% end %>